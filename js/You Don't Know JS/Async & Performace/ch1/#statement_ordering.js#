/*
   1) we make the code
   2) the engine might execute the code faster like this
*/

// 1)

var a, b;

a = 10;
b = 30;

a = a + 1;
b = b + 1;

console.log( a + b ); // 42

// 2)

var a, b;

a = 10;
a++;

b = 30;
b++;

console.log( a + b ); // 42

// Or this:

var a, b;

a = 11;
b = 31;

console.log( a + b ); // 42
